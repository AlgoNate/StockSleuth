{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "symbol": { "type": "string" },
      "name": { "type": "string" },
      "price": { "type": "number" },
      "percent_change": { "type": "number" },
      "timestamp": { "type": "string", "format": "date-time" },
      "stocks": {
        "type": "array",
        "items": { "$ref": "#" }
      }
    },
    "required": ["timestamp"],
    "anyOf": [
      { "required": ["symbol", "name", "price", "percent_change", "timestamp"] },
      { "required": ["timestamp", "stocks"] }
    ]
  }
}
